{
  "name": "clipboard-sync-electron",
  "version": "1.0.0",
  "description": "Cross-platform clipboard synchronization app using P2P connections over LAN",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "build": "node build-optimized.js pre && next build",
    "build:electron": "npm run build && electron-builder && node build-optimized.js post",
    "build:mac": "npm run build && electron-builder --mac && node build-optimized.js post",
    "build:win": "npm run build && electron-builder --win && node build-optimized.js post",
    "build:linux": "npm run build && electron-builder --linux && node build-optimized.js post",
    "start": "next start",
    "electron:build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "clipboard",
    "sync",
    "electron",
    "p2p",
    "lan",
    "cross-platform"
  ],
  "author": "Cenk Ozkan",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "next": "^14.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "@koush/wrtc": "^0.5.3",
    "framer-motion": "^12.23.12",
    "ip": "^1.1.8",
    "lucide-react": "^0.539.0",
    "network": "^0.4.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "simple-peer": "^9.11.1",
    "uuid": "^9.0.0"
  },
  "build": {
    "appId": "com.clipboardsync.app",
    "productName": "SyncClip",
    "directories": {
      "output": "dist"
    },
    "icon": "assets/icon.png",
    "files": [
      "main.js",
      "p2p-network.js",
      "preload.js",
      "assets/**/*",
      "renderer/**/*",
      "node_modules/uuid/**/*",
      "node_modules/@koush/wrtc/**/*",
      "node_modules/simple-peer/**/*",
      "node_modules/ip/**/*",
      "node_modules/network/**/*",
      "node_modules/events/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/"
      },
      {
        "from": "node_modules/",
        "to": "node_modules/",
        "filter": [
          "uuid/**/*",
          "@koush/wrtc/**/*",
          "simple-peer/**/*",
          "ip/**/*",
          "network/**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "assets/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "compression": "maximum",
    "removePackageScripts": true,
    "removePackageKeywords": true,
    "asar": true,
    "asarUnpack": [
      "renderer/**/*",
      "node_modules/uuid/**/*",
      "node_modules/@koush/wrtc/**/*",
      "node_modules/simple-peer/**/*",
      "node_modules/ip/**/*",
      "node_modules/network/**/*"
    ],
    "forceCodeSigning": false
  }
}
